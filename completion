
###
# Fonction principale
##
_olixsh_module()
{
    local CUR PREV PREV2
    COMPREPLY=()
    PREV="${COMP_WORDS[COMP_CWORD-1]}"
    PREV2="${COMP_WORDS[COMP_CWORD-2]}"

    case "${PREV2}" in
        install)
            return 0
            ;;
    esac

    case "${PREV}" in
        ubuntu)
            _olixsh_module_actions
            return 0
            ;;
        init)
            _olixsh_module_init
            return 0
            ;;
        install)
            _olixsh_module_install_packages
            return 0
            ;;
        config)
            _olixsh_module_config_packages
            return 0
            ;;
    esac
}


###
# Liste des actions du module Ubuntu
##
_olixsh_module_actions()
{
    local CUR ACTIONS
    CUR="${COMP_WORDS[COMP_CWORD]}"
    ACTIONS="init install config update savecfg help"

    COMPREPLY=( $(compgen -W "${ACTIONS}" -- ${CUR}) )
}


###
# Liste des packages de l'action INIT du module Ubuntu
##
_olixsh_module_init()
{
    local CUR PACKAGES
    CUR="${COMP_WORDS[COMP_CWORD]}"

    COMPREPLY=( $(compgen -W "--force" -- ${CUR}) )
}


###
# Liste des packages de l'action INSTALL du module Ubuntu
##
_olixsh_module_install_packages()
{
    local CUR PACKAGES
    CUR="${COMP_WORDS[COMP_CWORD]}"
    PACKAGES="--all network users virtualbox vmware apache php mysql nfs samba ftp postfix collectd logwatch monit snmpd tools help"

    COMPREPLY=( $(compgen -W "${PACKAGES}" -- ${CUR}) )
}


###
# Liste des packages de l'action CONFIG du module Ubuntu
##
_olixsh_module_config_packages()
{
    local CUR PACKAGES
    CUR="${COMP_WORDS[COMP_CWORD]}"
    PACKAGES="apache php mysql nfs samba ftp postfix collectd logwatch monit snmpd tools help"

    COMPREPLY=( $(compgen -W "${PACKAGES}" -- ${CUR}) )
}
